<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:stretchColumns="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_child_background">
    <TableRow>
        <ImageView
        android:id="@+id/device_image"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/account_name"/>
        <TableLayout
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    android:id="@+id/listView_deviceDesc"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/listView_deviceID"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="10dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/device_status"
                android:layout_marginLeft="10dp"
                android:textSize="24sp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/device_battery"
                    android:textSize="24sp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/device_battery_text"
                    android:layout_marginLeft="-6dp"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </TableRow>
</TableLayout>