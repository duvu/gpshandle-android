<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:stretchColumns="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/group_child_background">
    <TableRow>
        <View
            android:id="@id/ic_device_status"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/green"/>

        <TableLayout
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    android:id="@+id/listView_deviceDesc"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/listView_deviceID"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="10dip"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center">
            <TableRow>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ic_device_battery"
                        android:textSize="24sp"
                        android:textColor="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_device_battery"
                        android:layout_marginLeft="-6dp"
                        android:textSize="20sp"
                        android:textColor="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </TableRow>
</TableLayout>