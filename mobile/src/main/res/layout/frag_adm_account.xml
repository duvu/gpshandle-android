<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_background"
    android:orientation="horizontal" >
    <LinearLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ProgressBar android:id="@+id/bar_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/layout_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/txt_account_id"
                        android:text="@string/txt_account_id"
                        android:textColor="@color/text_color_dark"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_account_id_content"
                        android:textColor="@color/text_color_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/txt_account_desc"
                        android:text="@string/txt_account_desc"
                        android:textColor="@color/text_color_dark"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_account_desc_content"
                        android:textColor="@color/text_color_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow  android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/txt_account_display"
                        android:text="@string/txt_account_display"
                        android:textColor="@color/text_color_dark"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_account_display_content"
                        android:textColor="@color/text_color_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/txt_account_contact_name"
                        android:text="@string/txt_account_contact_name"
                        android:textColor="@color/text_color_dark"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_account_contact_name_content"
                        android:textColor="@color/text_color_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/txt_account_contact_email"
                        android:text="@string/txt_account_contact_email"
                        android:textColor="@color/text_color_dark"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_account_contact_email_content"
                        android:textColor="@color/text_color_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/txt_account_contact_phone"
                        android:text="@string/txt_account_contact_phone"
                        android:textColor="@color/text_color_dark"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_account_contact_phone_content"
                        android:textColor="@color/text_color_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/txt_account_device_count"
                        android:text="@string/txt_account_device_count"
                        android:textColor="@color/text_color_dark"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_account_device_count_content"
                        android:textColor="@color/text_color_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/txt_account_last_login"
                        android:text="@string/txt_account_last_login"
                        android:textColor="@color/text_color_dark"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_account_last_login_content"
                        android:textColor="@color/text_color_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/txt_account_creation"
                        android:text="@string/txt_account_created_on"
                        android:textColor="@color/text_color_dark"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_account_creation_content"
                        android:textColor="@color/text_color_dark"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/layout_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <TableRow>
                    <TextView
                        android:id="@+id/txt_user_id"
                        android:text="@string/txt_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_id_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txt_user_desc"
                        android:text="@string/txt_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_desc_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txt_user_disp"
                        android:text="@string/txt_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_disp_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txt_user_contact_name"
                        android:text="@string/txt_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_contact_name_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txt_user_contact_email"
                        android:text="@string/txt_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_contact_email_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txt_user_contact_phone"
                        android:text="@string/txt_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_contact_phone_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txt_user_contact_gender"
                        android:text="@string/txt_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_user_contact_gender_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>