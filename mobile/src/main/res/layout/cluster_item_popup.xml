<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*"
    android:shrinkColumns="*"
    android:padding="10dp"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/cluster_popup_background">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/txt_desc_title"
                android:text="@string/device_description"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@color/text_color_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_desc_content"
                android:gravity="start"
                android:textColor="@color/text_color_dark"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="end">
                <TextView
                    android:id="@+id/ic_device_status"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ic_device_satellite"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ic_device_gprs_ssi"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ic_device_battery"
                        android:textSize="20sp"
                        android:textColor="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_device_battery"
                        android:layout_marginLeft="-6dp"
                        android:textSize="14sp"
                        android:textColor="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txt_position_title"
                android:text="@string/device_position"
                android:textStyle="bold"
                android:textColor="@color/text_color_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_position_content"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:layout_span="2"
                android:layout_weight="1"
                android:textColor="@color/text_color_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txt_speed_title"
                android:text="@string/device_speedKph"
                android:textStyle="bold"
                android:textColor="@color/text_color_dark"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/txt_speed_content"
                android:textColor="@color/text_color_dark"
                android:paddingLeft="5dp"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txt_odom_title"
                android:text="@string/device_odometer"
                android:textStyle="bold"
                android:textColor="@color/text_color_dark"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/txt_odom_content"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_dark"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txt_addr_title"
                android:text="@string/device_address"
                android:textStyle="bold"
                android:textColor="@color/text_color_dark"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/txt_addr_content"
                android:gravity="start"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:textColor="@color/text_color_dark"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <!--<Button
            android:id="@+id/btn_historical_30m"
            android:text="@string/historical_30m"
            android:textSize="12sp"
            android:textColor="@color/text_color_dark"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_history"/>-->
        <Button
            android:id="@+id/btn_historical_60m"
            android:text="@string/historical_1h"
            android:textSize="12sp"
            android:textColor="@color/text_color_dark"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_history"/>
        <Button
            android:id="@+id/btn_historical_6h"
            android:text="@string/historical_6h"
            android:textSize="12sp"
            android:textColor="@color/text_color_dark"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_history"/>
        <Button
            android:id="@+id/btn_historical_12h"
            android:text="@string/historical_12h"
            android:textSize="12sp"
            android:textColor="@color/text_color_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_history"/>
    </LinearLayout>
</LinearLayout>