<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_child_background"
    android:orientation="horizontal">
    <View
        android:id="@+id/ic_lv_device_status"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/green"/>
    <LinearLayout
        android:id="@+id/lo_device_info"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_lv_device_description"
            android:maxLength="30"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:maxLength="30"
            android:textSize="12sp"
            android:layout_weight="1"
            android:id="@+id/txt_lv_device_id"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_color_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/lo_device_battery"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ic_device_battery"
            android:textSize="24sp"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_device_battery"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>