<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l_add_user"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:visibility="gone">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TableLayout
            android:background="@color/details_background"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/txt_user_id"
                    android:text="@string/txt_user_id"
                    android:textColor="@color/text_color_dark"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/txt_user_id_content"
                    android:textColor="@color/text_color_dark"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/txt_user_password"
                    android:text="@string/txt_user_password"
                    android:textColor="@color/text_color_dark"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/txt_user_password_content"
                    android:textColor="@color/text_color_dark"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:inputType="textPassword"/>
            </TableRow>
            <TableRow android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/txt_user_desc"
                    android:text="@string/txt_desc"
                    android:textColor="@color/text_color_dark"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/txt_user_desc_content"
                    android:textColor="@color/text_color_dark"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow  android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/txt_user_display"
                    android:text="@string/txt_display"
                    android:textColor="@color/text_color_dark"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/txt_user_display_content"
                    android:textColor="@color/text_color_dark"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow  android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/txt_is_active"
                    android:text="@string/txt_is_active"
                    android:textColor="@color/text_color_dark"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <LinearLayout>
                    <Switch
                        android:id="@+id/txt_is_active_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </TableRow>
            <TableRow android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/txt_user_contact_name"
                    android:text="@string/txt_account_contact_name"
                    android:textColor="@color/text_color_dark"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/txt_user_contact_name_content"
                    android:textColor="@color/text_color_dark"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/txt_user_contact_email"
                    android:text="@string/txt_user_contact_email"
                    android:textColor="@color/text_color_dark"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/txt_user_contact_email_content"
                    android:textColor="@color/text_color_dark"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/txt_user_contact_phone"
                    android:text="@string/txt_account_contact_phone"
                    android:textColor="@color/text_color_dark"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/txt_user_contact_phone_content"
                    android:textColor="@color/text_color_dark"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/txt_managed_groups"
                    android:text="@string/managed_groups"
                    android:textColor="@color/text_color_dark"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/txt_managed_groups_content"
                    android:textColor="@color/text_color_dark"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:id="@+id/btn_control_add_user"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_save"
                android:text="@string/txt_save"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_cancel"
                android:text="@string/txt_cancel"
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
