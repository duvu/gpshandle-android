<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/txt_device"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_dark"/>
        <TextView
            android:id="@+id/txt_device_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_dark"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_device_active"
        android:textSize="16sp"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/ic_indicator"
        android:layout_toStartOf="@+id/ic_indicator"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_group_size"/>
    <TextView
        android:id="@+id/ic_indicator"
        android:textColor="@color/text_color_dark"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>