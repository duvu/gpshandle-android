<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_info_layout"
    android:padding="10dp"
    android:layout_marginBottom="?attr/actionBarSize"
    android:background="@color/details_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow android:paddingBottom="10dp">
        <TextView
            android:id="@+id/txt_user_id"
            android:text="@string/txt_user_id"
            android:textColor="@color/text_color_dark"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/txt_user_id_content"
            android:textColor="@color/text_color_dark"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow android:paddingBottom="10dp">
        <TextView
            android:id="@+id/txt_user_desc"
            android:text="@string/txt_desc"
            android:textColor="@color/text_color_dark"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/txt_user_desc_content"
            android:textColor="@color/text_color_dark"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow  android:paddingBottom="10dp">
        <TextView
            android:id="@+id/txt_user_display"
            android:text="@string/txt_display"
            android:textColor="@color/text_color_dark"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/txt_user_display_content"
            android:textColor="@color/text_color_dark"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow android:paddingBottom="10dp">
        <TextView
            android:id="@+id/txt_user_contact_name"
            android:text="@string/txt_account_contact_name"
            android:textColor="@color/text_color_dark"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/txt_user_contact_name_content"
            android:textColor="@color/text_color_dark"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow android:paddingBottom="10dp">
        <TextView
            android:id="@+id/txt_user_contact_email"
            android:text="@string/txt_account_contact_email"
            android:textColor="@color/text_color_dark"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/txt_user_contact_email_content"
            android:textColor="@color/text_color_dark"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow android:paddingBottom="10dp">
        <TextView
            android:id="@+id/txt_user_contact_phone"
            android:text="@string/txt_account_contact_phone"
            android:textColor="@color/text_color_dark"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/txt_user_contact_phone_content"
            android:textColor="@color/text_color_dark"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow android:paddingBottom="10dp">
        <TextView
            android:id="@+id/txt_user_last_login"
            android:text="@string/txt_account_last_login"
            android:textColor="@color/text_color_dark"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/txt_user_last_login_content"
            android:textColor="@color/text_color_dark"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow android:paddingBottom="10dp">
        <TextView
            android:id="@+id/txt_user_creation"
            android:text="@string/txt_created_on"
            android:textColor="@color/text_color_dark"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/txt_user_creation_content"
            android:textColor="@color/text_color_dark"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow android:paddingBottom="10dp">
        <TextView
            android:id="@+id/txt_managed_groups"
            android:text="@string/managed_groups"
            android:textColor="@color/text_color_dark"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/txt_managed_groups_content"
            android:textColor="@color/text_color_dark"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>
</TableLayout>